// Project Schema

model Project {
    id          String        @id @default(cuid())
    title       String
    description String?
    status      ProjectStatus @default(PENDING)
    priority    Priority      @default(MEDIUM)
    budget      Decimal?      @db.Decimal(12, 2)
    deadline    DateTime?
    clientName  String?
    clientEmail String?
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt

    // Relations
    userId    String
    user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
    finances  Finance[]
    schedules Schedule[]

    @@index([userId])
}

enum ProjectStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
    CANCELLED
    ON_HOLD
}

enum Priority {
    LOW
    MEDIUM
    HIGH
    URGENT
}
